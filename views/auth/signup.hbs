<form action="/signup" method="POST">
   <label> Username
      <input type="text" name="username" id="username">
   </label>

   <label> Email
      <input type="email" name="email" id="email">
   </label>

   <label> Password
      <input type="password" name="password" id="password">
   </label>

   <button type="submit">Let's start!</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}