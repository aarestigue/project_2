<div class='container'>

  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-6'>

        <h1>Edit {{username}}</h1>

        <hr />

        <form action='{{username}}/profile/edit' method='POST'>
          <label>
            Username
            <input type='text' name='username' value='{{user.username}}' />
          </label>

          <label>
            Email
            <input type='email' name='email' value='{{user.email}}' />
          </label>

          <label>
            Password
            <input type='text' name='password' value='{{user.password}}' />
          </label>

          <input type='submit' value='Update-user'/>
          <button href="/{{username}}/profile" type="submit">Edit</button>
        </form>

      </div>
    </div>
  </div>

</div>