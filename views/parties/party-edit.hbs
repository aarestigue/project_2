<div id="karaoke-edit-body">

<h1 style="color: white; margin-top: 2vh;">Edit your Party</h1>

<div class="party-form-box">
<form  method="post" action="/{{party.name}}/edit-party" enctype="multipart/form-data">

<label for="name">Party name</label>
<input type="text" name="name" id="name" value="{{party.name}}" />

{{!-- <label for="creator">Creator</label> --}}
<input type="text" name="creator" id="creator" value="{{username}}" hidden/>



<label for="contributors">Add new contributors</label>

{{!-- {{#each party.contributors}} --}}
<select  name="contributors[]" id="contributors"  size="2"  class="js-example-basic-multiple" multiple="multiple" value="{{this.username}}">

    {{#each allUsers}}
    {{#if this.isContributor}}
    <option value="{{this._id}}" selected>{{this.username}}</option>
    {{else}}
    <option value="{{this._id}}" >{{this.username}}</option>
    {{/if}}
    {{/each}}
</select>
{{!-- {{/each}} --}}


<div>
<label for='imageUrl'>Party Image</label>
<input type='file' name='imageUrl' id='imageUrl' class='form-control-file' />
 <input type='text' name='previousUrl' value='{{party.imageUrl}}' hidden />
<img src="{{user.imageUrl}}" alt="">
</div>

 <button type='submit' class='btn btn-primary'>Edit Party</button>
 <a href="/{{username}}/party/{{party.name}}"><button type='submit' class='btn btn-primary'>Cancel</button></a>


</form>
