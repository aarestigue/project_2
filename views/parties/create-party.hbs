<h1>Create a Party</h1>

<div>

{{!-- FORM  --}}

    <form  method="post" action="/{{username}}/create-party" enctype="multipart/form-data">

    <div class="form-row">
        <div class="col-5">
           {{!--  <label for="name">Party name</label> --}}
            <input type="text" name="name" id="name" class="form-control" placeholder="Party name" />
        </div>

{{!-- <label for="creator">Creator</label> --}}
<input type="text" name="creator" id="creator" value="{{username}}" hidden/>

<label for="contributors">Contributors</label>


<select  name="contributors[]" id="contributors"  size="2"  class="js-example-basic-multiple" multiple="multiple">
    
    {{#each allUsers}}
    <option value="{{this._id}}" >{{this.username}}</option>
    {{/each}}
</select>


    <div>
        <label for='imageUrl'>Party Image</label>
        <input type='file' name='imageUrl' id='imageUrl' class='form-control-file' />
    </div>

        <button type='submit' class='btn btn-primary'>Create Party!</button>
        
        </div>
    </form>
</div>

