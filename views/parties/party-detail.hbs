<div>
<H1>{{data.party.name}}</H1>
<a href="/{{user.username}}/profile">Go back</a>
<a href="/{{data.party.name}}/delete/party" >Delete party</a>
<a href="/{{data.party.name}}/edit/party">Add contributors</a>
</div>

<div class="playlist-fullpage">
    
<div class="playlist-container">

{{!-- SEARCH BAR AND RESULTS GO HERE --}}

<section id="playlist-search"> 

<form action="/{{data.party.creator}}/party/{{data.party.name}}" method="get">
<label for="search">Find your song</label>

<input type="text" name="search" id="search" value="" >
{{!-- <input type="text" name="partyId" value="{{party._id}}" hidden> --}}


<button type="submit">search</button>

</form>


<div>

{{#if data.songQuery}}
{{#each data.songQuery}}

<li>{{this.snippet.title}}</li>

<form action="/add-song/{{this.id.videoId}}/{{../data.party._id}}/{{this.snippet.title}}" method="post" id="{{this.id.videoId}}" >
<input type="text" name="songId" value="{{this.id.videoId}}" hidden>
<input type="text" name="'songTitle" value="{{this.snippet.title}}" id="songTitle" hidden>
<button type="Submit" >Add</button>
</form>
{{/each}}
{{/if}}

</div>

</section>   

{{!-- PARTY PLAYLIST GOES HERE  --}}

<section id="playlist-list">

<h2>{{data.party.name}} playlist</h2>

<form action="/{{data.party.name}}/karaoke" method="get">
<a href="/{{data.party.name}}/karaoke"><img src="/images/play (1).png" alt="" width="25"></a>
<input type="text" id="partyName" value="{{data.party.name}}" hidden>
<button type="submit">Start Karaoke!</button>
</form>

<div id="playlist-songs">
{{#each data.party.songs}}

<li>{{this.title}}</li>

{{/each}}

</div>

</section>

</div>

{{!-- CONTRIBUTORS GOES HERE  --}}

<section id="playlist-contributors">

    <h2>Contributors</h2>

{{#each data.party.contributors}}

<li>{{this.username}}</li>
{{!-- <a href="/contributor/delete"><img src="/images/remove.png" alt="" width="10"></a> --}}

{{/each}}

</section>

</div>



