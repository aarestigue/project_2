    <form class="form-inline" action="/{{data.party.creator}}/party/{{data.party.name}}" method="get"/>
    <input class="form-control mr-sm-2" type="search" placeholder="Find your song" aria-label="Search" name="search" id="search" />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
